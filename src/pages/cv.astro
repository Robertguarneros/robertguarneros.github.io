<style>
  .cv-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .cv-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .download-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: linear-gradient(135deg, var(--accent), #8b5cf6);
    color: white;
    text-decoration: none;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: var(--transition);
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
  }

  .cv-section {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .cv-section:last-child {
    border-bottom: none;
  }

  .cv-section h2 {
    margin-bottom: 2rem;
  }

  .cv-item {
    margin-bottom: 2.5rem;
  }

  .cv-item:last-child {
    margin-bottom: 0;
  }

  .cv-item h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .institution,
  .position {
    color: var(--accent);
    font-weight: 600;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .description {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .achievements {
    list-style-position: inside;
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .achievements li {
    margin-bottom: 0.5rem;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .skill-category h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    color: var(--accent);
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
  }

  .skill-category li {
    padding: 0.5rem 0;
    color: var(--text-secondary);
    border-bottom: 1px solid var(--border);
  }

  .skill-category li:last-child {
    border-bottom: none;
  }

  @media (max-width: 768px) {
    .cv-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
