<style>
  .about-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero {
    margin-bottom: 4rem;
  }

  .intro {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .hero strong {
    color: var(--accent);
  }

  section {
    margin-bottom: 4rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-link {
    transition: transform 0.2s ease;
    display: inline-block;
  }

  .social-link:hover {
    transform: translateY(-2px);
  }

  .badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .badges img {
    transition: transform 0.2s ease;
  }

  .badges img:hover {
    transform: translateY(-2px);
  }
</style>
